// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())

  // Relations
  entries  Entry[]
  gardens  Garden[]
}

model Entry {
  id        String   @id @default(uuid())
  text      String
  songUrl   String?
  dayKey    String
  createdAt DateTime @default(now())

  // NEW: user relation (optional for now; we'll make required later)
  userId String?
  user   User?     @relation(fields: [userId], references: [id])

  @@index([dayKey])
  @@index([userId, dayKey])
}

model Garden {
  id         String   @id @default(uuid())
  period     String
  periodKey  String
  status     String   @default("PENDING")
  imageUrl   String?
  palette    String?
  seedValue  Int
  summary    String?
  progress   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // NEW: public share identifier (short, opaque)
  shareId    String?  @unique

  // Existing user relation
  userId String?
  user   User?     @relation(fields: [userId], references: [id])

  @@unique([userId, period, periodKey])
}
