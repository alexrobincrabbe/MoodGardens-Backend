// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Entry {
  id        String   @id @default(uuid())
  text      String
  songUrl   String?
  dayKey    String
  createdAt DateTime @default(now())

  @@index([dayKey])
}

model Garden {
  id         String   @id @default(uuid())
  period     String
  periodKey  String
  status     String   @default("PENDING")
  imageUrl   String?
  palette    String?
  seedValue  Int
  summary    String?
  progress   Int      @default(0) // <-- NEW: 0..100 while generating; 100 when READY
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([period, periodKey])
}
